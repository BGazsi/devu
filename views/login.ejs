<%- include partials/portalHeader.ejs %>
<%- include partials/criticalLogin.ejs %>

<div id="fb-root"></div>
<div id="status"></div>
<div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false" data-component="fb-login"></div>

	<div class="row">
		<div class="container top-offset-3">
			<div class="logo-center">
				<img src="/public/images/devu-logo.png" height="20">
			</div>
			<div class="box-container">
				<a href="/auth/facebook" class="btn btn-info btn-block">
					<i class="fa fa-facebook"></i>
					Belépés Facebook-kal
				</a>
				<p>vagy</p>
				<form action="/user/login" method="post">
					<input type="email" name="email" class="form-control" id="email" placeholder="Email">
					<input type="password" name="password" class="form-control" id="password" placeholder="Jelszó">
					<div class="checkbox">
						<input type="checkbox" id="remember-me">
						<label for="remember-me">
							maradjak belépve
						</label>
					</div>
					<button type="submit" value="Submit" class="btn btn-primary btn-block" data-component="login">Belépés</button>
				</form>
			</div>
		</div>
		<div class="container text-center not-member">
			<span>Még nem vagy tag? <a href="/user/register">Itt regisztrálhatsz!</a></span>
			<div><a href="#">Elfelejtettem a jelszavamat</a></div>
			<div class="no-registration">
				<div>Nem szeretsz regisztrálni?</div>
				<div><a href="/home">Próbáld ki regisztráció nélkül!</a></div>
				<div><a href="/landing">Miről maradok le?</a></div>
			</div>
		</div>
	</div>

<%- include partials/portalFooter.ejs %>